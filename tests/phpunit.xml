<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="./bootstrap.php">
    <testsuites>
        <testsuite name="Brainfart Test Suite">
            <directory>./unit/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">./../library/Brainfart/</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="./../build/documentation/coverage" charset="utf-8"/>
    </logging>
</phpunit>